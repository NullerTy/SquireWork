{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Use 'node' for compatibility with Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Add this to set the base directory
    "paths": {
      "@/*": ["src/*"], // Resolve the '@' alias to 'src/'
      "@/components/*": ["src/components/*"], // Resolve to components directory
      "@/app/*": ["src/app/*"] // Add this if you're using the 'app' folder as well
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(front)/content/jobs/page.mdx",
    "src/app/(front)/content/our-work/page.mdx",
    "src/app/(front)/content/media/page.tsx"
  ],
  "exclude": ["node_modules"]
}
